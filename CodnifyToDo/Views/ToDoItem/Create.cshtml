@model CodnityToDo.Views.ToDoItem.CreateModel

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary pl-3">Create ToDo item</h2>
			<hr />
		</div>
		<div asp-validation-summary="All"></div>
		<div class="mb-3" hidden>
			<input asp-for="ToDoItem.UserName" class="form-control" value="@ViewBag.userName" />
			<label asp-for="ToDoItem.UserName"></label>
			<span asp-validation-for="ToDoItem.UserName" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="ToDoItem.Description"></label>
			<input asp-for="ToDoItem.Description" class="form-control" />
			<span asp-validation-for="ToDoItem.Description" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="ToDoItem.DeadlineDate"></label>
			<input asp-for="ToDoItem.DeadlineDate" class="form-control" />
			<span asp-validation-for="ToDoItem.DeadlineDate" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="ToDoItem.Status"></label>
			<input type="checkbox" asp-for="ToDoItem.Status" checked/>
			<span asp-validation-for="ToDoItem.Status" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px;">Create</button>
		<a asp-controller="ToDoItem" asp-action="Index" class="btn btn-secondary" style="width:150px;"> Back to List</a>

	</div>
</form>